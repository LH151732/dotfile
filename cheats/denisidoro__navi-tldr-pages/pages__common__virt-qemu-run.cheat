% virt-qemu-run, common

# Run a QEMU virtual machine
virt-qemu-run <path_to_guest.xml>

# Run a QEMU virtual machine and store the state in a specific directory
virt-qemu-run --root=<path_to_directory> <path_to_guest.xml>

# Run a QEMU virtual machine and display verbose information about the startup
virt-qemu-run --verbose <path_to_guest.xml>

# Display help
virt-qemu-run --help
