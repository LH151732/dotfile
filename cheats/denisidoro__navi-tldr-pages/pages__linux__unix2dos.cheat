% unix2dos, linux

# Change the line endings of a file
unix2dos <path_to_file>

# Create a copy with DOS-style line endings
unix2dos <-n|--newfile> <path_to_file> <path_to_new_file>

# Display file information
unix2dos <-i|--info> <path_to_file>

# Keep/add/remove Byte Order Mark
unix2dos --<keep-bom|add-bom|remove-bom> <path_to_file>
