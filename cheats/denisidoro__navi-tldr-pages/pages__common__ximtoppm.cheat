% ximtoppm, common

# Convert an XIM image to a PPM image
ximtoppm <path_to_input_file.xim> > <path_to_output_file.ppm>

# Store the transparency mask of the input image in the specified file
ximtoppm --alphaout <path_to_alpha_file.pbm> <path_to_input_file.xim> > <path_to_output_file.ppm>
