% pnmmargin, common

# Add a border of the specified size to a PNM image
pnmmargin <size> <path_to_image.pnm> > <path_to_output.pnm>

# Specify the color of the border
pnmmargin -color <color> <size> <path_to_image.pnm> > <path_to_output.pnm>
